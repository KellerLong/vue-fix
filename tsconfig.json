{
    "include": ["types/*.d.ts","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
    "compilerOptions": {
      "jsx": "preserve",
      "target": "esnext",
      "module": "esnext",
      "sourceMap": true,
      "outDir": "./dist",
      "lib": ["esnext", "dom"],
      "types": ["vite/client", "node"],
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  }
